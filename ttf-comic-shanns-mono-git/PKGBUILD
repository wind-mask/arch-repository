# Maintainer: wind_mask <YOU KNOW WHO>
pkgname=ttf-comic-shanns-mono-git
pkgver=r50.5a13931
pkgrel=1
pkgdesc="Comic Sans inspired monospaced font"
license=('MIT')
arch=('any')
url="https://github.com/jesusmgg/comic-shanns-mono"
makedepends=('git')
provides=("comic-shanns-mono")

source=("git+https://github.com/jesusmgg/comic-shanns-mono.git")
md5sums=('SKIP')

pkgver() {
	cd "$srcdir/comic-shanns-mono/fonts"
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
	install -Dm755 'comic-shanns-mono/fonts/'*.ttf -t "${pkgdir}/usr/share/fonts/TTF"
	install -Dm644 'comic-shanns-mono/LICENSE.md' -t "${pkgdir}/usr/share/licenses/${pkgname%-*}"
}
